# LAYER_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
LCONF_VERSION = "14"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

# meta-intel-openbmc has a config file that needs to be overridden
BBMASK = "/meta-intel-openbmc/meta-common/recipes-phosphor/ipmi/phosphor-ipmi-ipmb/"
BBMASK += "/meta-openbmc-mods/meta-common/recipes-phosphor/console/obmc-console_%.bbappend"
BBMASK += "/meta-phosphor/recipes-phosphor/webui/webui-vue_git.bb"
BBMASK += "/meta-openbmc-mods/meta-common/recipes-phosphor/webui/webui-vue_%.bbappend"
BBMASK += "/meta-openbmc-mods/meta-egs/recipes-phosphor/webui/webui-vue_%.bbappend"
BBMASK += "/meta-openbmc-mods/meta-common/recipes-core/os-release/"
#BBMASK += "/meta-insyde/meta-common/meta-core/recipes-extended/pam/"

# Use json for config led manager
BBMASK += "/meta-openbmc-mods/meta-common/recipes-phosphor/leds/phosphor-led-manager_%.bbappend"

BBLAYERS ?= " \
  ##OEROOT##/meta \
  ##OEROOT##/meta-poky \
